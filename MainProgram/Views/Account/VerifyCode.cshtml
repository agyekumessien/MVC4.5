@model MainProgram.Core.VerifyCodeViewModel
@using MainProgram.Core.Resources



@{
    ViewBag.Title = "Verify";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Content/css/style.css" rel="stylesheet" />
<link href="~/Content/css/Custom.css" rel="stylesheet" />
<link href="~/Content/css/bootstrap.css" rel="stylesheet" />


<div class="login-page no-gutters no-padding margin-top-0 margin-top-15 bottom-0 border-bottom-0">
    <div class="login-box margin-bottom-0 no-gutters no-padding noUi-background">

        <div class="login-box-body">

            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Enter verification code</h3>
                </div>
                <div class="panel-body">
                      @using (Html.BeginForm("VerifyCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" })) 
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("provider", @Model.Provider)
                        @Html.Hidden("rememberMe", @Model.RememberMe)
                          
                        <fieldset>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="form-group">
                                <h2 style="width:300px">
                                    @Html.TextBoxFor(m => m.Code, new { @placeholder = "Email" })
                                    @Html.ValidationMessageFor(m => m.Code, "", new { @class = "error" })
                                </h2>
                            </div>


                            <div class="form-group">
                                <h2 style="width:300px">
                                   @Html.CheckBoxFor(m => m.RememberBrowser)
                                @Html.LabelFor(m => m.RememberBrowser)
                                </h2>
                            </div>

                            
                            <input type="submit" class="btn btn-default" value="Submit" />

                        </fieldset>
                      
                    }
                </div>
            </div>

        </div><!-- /.login-box-body -->
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")


}




<style>
    .login-logo,
    .register-logo {
        font-size: 35px;
        text-align: center;
        margin-bottom: 25px;
        font-weight: 300;
    }

        .login-logo a,
        .register-logo a {
            color: #444;
        }

    .login-page,
    .register-page {
        background: #d2d6de;
        width: 100%;
        height: 100%;
        margin-bottom: 0px;
        padding-top: 15px;
        padding-bottom: 8%;
        padding-top: 5%;
    }

    .login-box,
    .register-box {
        width: 425px;
        margin: 7% auto;
    }

    .login-box-body,
    .register-box-body {
        background: #fff;
        padding: 20px;
        color: #444;
        border-top: 0;
        color: #666;
        border-radius: 5px;
    }

        .login-box-body .form-control-feedback,
        .register-box-body .form-control-feedback {
            color: #777;
        }

    .login-box-msg,
    .register-box-msg {
        margin: 0;
        text-align: center;
        padding: 0 20px 20px 20px;
    }


    .login-box .h2 {
        border-radius: 10px;
    }
</style>





