<!--MID Sidebar Main content-->
<div class="Mid-sidebar" style="margin-right:10px; padding-right:0px; text-align:center">
    <div class="panel panel-default" style="width: 100%; margin-left: 0px;">
        <strong style="font-size:x-large"><b>Top questions</b></strong>



        <h2>Post</h2>

        <p>
            @Html.ActionLink("New Post", "Create", "EntityF")
        </p>
        <hr />
        @using (Html.BeginForm("AdminIndex", "EntityF", FormMethod.Get))
        {
            <p>
                Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                <input type="submit" value="Search" />
            </p>
        }
        <br />
        <table class="table">

            <tr>
                QUESTION

            </tr>




            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        <br />
                        <span style="margin-right:15px; font-size:16px; color:black">
                            <br />
                            <b>@item.EntityFTitle</b>
                        </span>

                        <br />
                        <span style="margin-right:15px; font-size:16px; color:black">
                            <br /> @Html.Raw(@item.EntityFText)
                        </span>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.EntityFId }) |
                        @Html.ActionLink("Details", "Details", new { id = item.EntityFId }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.EntityFId })
                    </td>
                </tr>
            }

        </table>


        <br />
        <ul>
            <li>
                Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                @Html.PagedListPager(Model, page => Url.Action("AdminIndex",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
            </li>
            <li>
                @Html.ActionLink("Full Page", "AdminIndex", "EntityF")
            </li>
        </ul>












    </div>













</div>


<br /><br />

<div>
    @Html.ActionLink("Back to HomePage", "Index", "Home")
</div>




