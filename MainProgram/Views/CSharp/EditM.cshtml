
@model MainProgram.Edm.CSharp

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>CSharp</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.CSId)


        <div class="form-group">
            @Html.LabelFor(model => model.CSharpTitle, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CSharpTitle, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CSharpTitle, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.CSharpText, htmlAttributes: new { placeholder = "CSharpText", @class = "control-label col-md-2" })
            <div class="dib col-md-10" style="text-align:left">

                @Html.TextAreaFor(model => model.CSharpText, new { @class = "blue col-md-12", @required = "required", @autofocus = "true", @align = "left", })

                @Html.ValidationMessageFor(model => model.CSharpText, "", new { @class = "text-danger" })

            </div>
        </div>





        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>


}




<div>
    @Html.ActionLink("Back to List", "AdminIndex")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<style>
    .blue {
        height: 200px;
        width: 100%;
        white-space: pre-wrap;
        text-align: left;
    }
</style>

<p id="paragraph">

</p>
<script>
        var ContentFromTextArea = "dib";
        ContentFromTextArea.replace("\r", "<br />", "text-align left");
        ContentFromTextArea.replace("\n", "<br />");
        $("#paragraph").html(ContentFromTextArea);
        $("#blue").html("text-align left");
</script>
