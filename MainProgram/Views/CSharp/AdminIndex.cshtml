        background-color: #eee3e3;
    }



    .Mid-sidebar {
        content: " ";
        position: relative;
        margin-top: 0%;
        width: 60%;
        overflow: no-display;
        padding-right: 0px;
        margin-left: 20%;
        margin-right: 0%;
        background-position: top;
        margin-bottom: 0px;
        background-color: #fff;
    }


    .SiteT {
        width: 100%;
        border: none;
        margin-right: 0px;
        padding-right: 0px;
    }




    .main--container {
        margin-left: 17px;
    }
</style>


</div>