@model PagedList.IPagedList<MainProgram.Edm.CSharp>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@using MainProgram.Core.Resources
@using MainProgram.Edm
@using Microsoft.AspNet.Identity
@using MainProgram.Models



@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_LayoutSub.cshtml";
}

<link href="~/Content/css/style.css" rel="stylesheet" />
<link href="~/Content/css/Custom.css" rel="stylesheet" />
<link href="~/Content/css/bootstrap.css" rel="stylesheet" />

@{
    angulardemoEntities dbm = new angulardemoEntities();
    var categories = dbm.Posts.Where(c => c.DepartmentID == c.DepartmentID).ToList();
}
























<div class="content-wrapper" style="width: 20%; margin-left: 0px; width:100%; top:0px; background-image: url('../../Content/img/ApparelImages/back.jpg');">




    <!-- left sidebar-->



    <div class="left" style="width: 17%; float:left; top:0px; background-image: url('../../Content/img/ApparelImages/back.jpg');">
        <div class="Container">
            <div class="col-md-4">
                <div class="container">
                    <div class="panel panel-default" style="width: 22%">

                        <div class=" panel-body  no-gutter">
                            <div col-md-4">
                                <div class="panel panel-default" style="width: 100%; margin-left: 0px;">







                                </div>






                            </div>
                        </div>







                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




<!--End Of Left-->
<!-- Right-->


<div class="right"
     style="width: 21%; float:right; margin-right:8px; padding-right:8px; top:0px; background-image: url('../../Content/img/ApparelImages/back.jpg');">
    <div class="Container">
        <div class="col-md-4">
            <div class="container">
                <div class="panel panel-default" style="width: 22%">

                    <div class=" panel-body  no-gutter">
                        <div col-md-4">
                            <div class="panel panel-default" style="width: 100%; margin-left: 0px;">








                            </div>






                        </div>
                    </div>







                </div>
            </div>
        </div>
    </div>
</div>


<!--End Of Right-->
<!--MID Sidebar Main content-->
<div class="Mid-sidebar" style="margin-right:10px; padding-right:0px; text-align:center">
    <div class="panel panel-default" style="width: 100%; margin-left: 0px;">
        <strong style="font-size:x-large"><b>Top questions</b></strong>



        <h2>Post</h2>

        <p>
            @Html.ActionLink("New Post", "Create", "CSharp")
        </p>
        <hr />
        <fieldset>
            @using (Html.BeginForm("AdminIndex", "CSharp", FormMethod.Get))
            {
                <p>
                    Find by name: @Html.TextBox("SearchString", ViewBag.CurrentFilter as string)
                    <input type="submit" value="Search" />
                </p>
            }


            <br />





        </fieldset>

        <fieldset>


            <br />
            <table class="table">

                <tr>
                    QUESTION

                </tr>




                @foreach (var item in Model)
                {

                    <tr>
                        <td>
                            <br />
                            <span style="margin-right:15px; font-size:16px; color:black">
                                <br />
                                <b>@item.CSharpTitle</b>
                            </span>

                            <br />
                            <span style="margin-right:15px; font-size:16px; color:black">
                                <br /> @Html.Raw(@item.CSharpText)
                            </span>
                        <td>
                            @Html.DisplayFor(modelItem => item.PostDate)
                        </td>
                          <td>
                              @Html.ActionLink("Edit", "Edit", new { id = item.CSId })
                              @Html.ActionLink("Details", "Details", new { id = item.CSId })
                              @Html.ActionLink("Delete", "Delete", new { id = item.CSId })
                            </td>
                    </tr>
                }

            </table>


            <br />
            <ul>
                <li>
                    Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

                    @Html.PagedListPager(Model, page => Url.Action("AdminIndex",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
                </li>
                <li>
                    @Html.ActionLink("Full Page", "AdminVew", "CSharp")
                </li>
            </ul>




        </fieldset>









    </div>






</div>


<br /><br />

<div>
    @Html.ActionLink("Back to HomePage", "AdminIndex", "Home")
</div>




<!--End Of MID-->











