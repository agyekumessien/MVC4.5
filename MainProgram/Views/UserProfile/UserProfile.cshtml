                }




                .main--container {
                    margin-left: 17px;
                }


                .ScrollgridL {
                    OVERFLOW: auto;
                    border: none;
                    border-top-left-radius: 20px;
                    border-top-right-radius: 20px;
                    WIDTH: 100%;
                    BORDER-BOTTOM: #000000 none;
                    HEIGHT: 750px;
                    max-height: 750px;
                    min-height: 750px;
                    scrollbar-3dlight-color: none;
                    scrollbar-arrow-color: #9C3842;
                    scrollbar-base-color: #ffffff;
                    scrollbar-darkshadow-color: none;
                    scrollbar-face-color: transparent;
                    scrollbar-highlight-color: #ffffff;
                    scrollbar-shadow-color: #ffffff;
                }

                .ScrollgridR {
                    OVERFLOW: auto;
                    border: none;
                    WIDTH: 100%;
                    BORDER-BOTTOM: #000000 none;
                    HEIGHT: 700px;
                    max-height: 700px;
                    min-height: 700px;
                    scrollbar-3dlight-color: #fff;
                    scrollbar-arrow-color: #9C3842;
                    scrollbar-base-color: #003366;
                    scrollbar-face-color: #ffffff;
                    scrollbar-face-color: #ffffff;
                    scrollbar-highlight-color: #ffffff;
                    scrollbar-shadow-color: #ffffff;
                }

                .ScrollgridM {
                    OVERFLOW: auto;
                    border: none;
                    WIDTH: 100%;
                    BORDER-BOTTOM: #000000 none;
                    HEIGHT: 700px;
                    max-height: 700px;
                    min-height: 700px;
                    scrollbar-3dlight-color: #fff;
                    scrollbar-arrow-color: #9C3842;
                    scrollbar-base-color: #003366;
                    scrollbar-face-color: #ffffff;
                    scrollbar-face-color: #ffffff;
                    scrollbar-highlight-color: #ffffff;
                    scrollbar-shadow-color: #ffffff;
                }


                .carousel.fade {
                    opacity: 1;
                }


                    .carousel.fade .item {
                        /* transition: opacity ease-out .7s;  can remove to stop 1st slide rapid changing */
                        left: 0;
                        top: 0;
                        position: absolute;
                        width: 100%;
                        display: block;
                    }

                        .carousel.fade .item:first-child {
                            top: auto;
                            opacity: 1; /* show first slide */
                            position: relative;
                        }

                        .carousel.fade .item.active {
                            opacity: 1;
                        }







                .carousel,
                .carousel-inner,
                .carousel-inner .item {
                    height: 100%;
                }

                .item:nth-child(1) {
                    background: #f1f1f1;
                }

                .item:nth-child(2) {
                    background: #51BCE8;
                }

                .item:nth-child(3) {
                    background: #E46653;
                }


                /*.carousel-fade   .carousel-inner  .item{

                    transition-property: opacity;
                }*/

                .item,
                .active.left,
                .active.right {
                    opacity: 0;
                }

                .active,
                .next.left,
                .prev.right {
                    opacity: 1;
                }

                    .next,
                    .prev,
                    .active.left,
                    .active.right {
                        left: 0;
                        transform: translate3d(0, 0, 0);
                    }


                .carousel-control {
                    z-index: 2;
                }
            </style>
